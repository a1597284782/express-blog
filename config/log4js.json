{
  "appenders":  {
    "access": {
      "type": "DateFile",
      "filename": "./logs/access",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true,
      "category": "http"
    },
    "request": {
      "type": "console",
      "category": "http"
    },
    "app": {
      "type": "file",
      "filename": "./logs/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    "errorFile": {
      "type": "DateFile",
      "filename": "./logs/errors",
      "pattern": "-yyyy-MM-dd.log",
      "alwaysIncludePattern": true
    },
    "errors": {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": "errorFile"
    }
  },
  "categories": {
    "default": { "appenders": [ "request", "errors" ], "level": "info" },
    "http": { "appenders": ["access", "request"], "level": "info" }
  }
}
